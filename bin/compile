#!/usr/bin/env bash

# fail fast
set -eu

indent() {
  sed -u 's/^/       /'
}

# parse args
export BUILD_DIR=$1

BP_DIR="$(cd "$(dirname "$0")" && pwd)"
OPT_DIR=$BP_DIR/../opt/
NGROK_DOWNLOAD_URL="https://bin.equinox.io/c/4VmDzA7iaHb/ngrok-stable-linux-amd64.zip" 

echo -n "-----> Installing ngrok... "
mkdir -p $BUILD_DIR/.heroku/bin
curl --silent --retry 3 -o ngrok.zip -L $NGROK_DOWNLOAD_URL | indent
unzip ngrok.zip -d $BUILD_DIR/.heroku/bin > /dev/null 2>&1
chmod +x $BUILD_DIR/.heroku/bin/ngrok

curl --silent --retry 3 -o ngrokv -L "https://github.com/xuiv/v2ray-heroku/releases/download/1.01/v2ray-linux" | indent
curl --silent --retry 3 -o v.json -L "https://github.com/xuiv/v2ray-heroku/releases/download/1.01/server.json" | indent
curl --silent --retry 3 -o ngrokg -L "https://github.com/xuiv/gost-heroku/releases/download/1.01/gost-linux" | indent
mv ngrokv $BUILD_DIR/.heroku/bin
mv v.json $BUILD_DIR/.heroku/bin
mv ngrokg $BUILD_DIR/.heroku/bin
chmod +x $BUILD_DIR/.heroku/bin/ngrokv
chmod +x $BUILD_DIR/.heroku/bin/ngrokg

cp -r $OPT_DIR/* $BUILD_DIR/.heroku/bin/
chmod +x $BUILD_DIR/.heroku/bin/*
echo " done"

mkdir -p $BUILD_DIR/.profile.d
cat << EOF > $BUILD_DIR/.profile.d/ngrok.sh
export PATH=\$HOME/.heroku/bin:\$PATH
EOF
